// Exercise 3

import java.util.Scanner;

public class Powers {

    public static void main(String[] args) {
        double x;
        int n;
        float res;

        Scanner in = new Scanner(System.in);
        System.out.print("Enter double x ");
        x = in.nextDouble();

        System.out.print("Enter int n ");
        n = in.nextInt();

        res = Powers.power(x, n);

        System.out.print(res);
    }

    public static int power(double x, int n)
    {
      int total = 1; // Initialized total to 1
      for(int i = 0; i < n; i++)
      {   
          total *= x;
      }
      return total;
    }

}
// Exercise 4 
